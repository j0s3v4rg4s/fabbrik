{
  "compilerOptions": {
    "lib": ["es2015", "es2017", "dom"],
    "removeComments": false,
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"]
    }
  }
}
